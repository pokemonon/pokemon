{
    "compilerOptions": {
        "resolveJsonModule": true,
        "target": "es2015",
        "module": "commonjs",
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
            "@pokemonon/knife": [
                "src/common/index.ts"
            ],
        }
    },
    "include": [
        "src",
        "tests"
    ]
}