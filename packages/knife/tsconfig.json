{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es2015",
    "module": "commonjs",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node16",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@pokemonon/knife": [
        "src/common/index.ts"
      ],
      "@pokemonon/knife/node": [
        "src/node/index.ts"
      ],
      "@pokemonon/knife/browser": [
        "src/browser/index.ts"
      ]
    }
  },
  "include": [
    "src",
    "tests"
  ]
}
