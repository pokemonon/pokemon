{
    "tags": {
        "allowUnknownTags": ["category", "subcategory"]
    },
    "source": {
        "include": [
            "./src"
        ],
        "includePattern": "\\.(jsx|tsx?)$"
    },
    "plugins": [
        "better-docs/component",
        "better-docs/category",
        "plugins/markdown",
        "node_modules/better-docs/typescript",
        "node_modules/better-docs/category"
    ],
    "opts": {
        "encoding": "utf8",
        "destination": "../../assets/knife",
        "recurse": true,
        "verbose": true,
        "template": "node_modules/better-docs"
    },
    "templates": {
        "better-docs": {
            "name": "Example documentation",
            "navigation": [
                {
                    "label": "GitHub",
                    "href": "https://github.com/SoftwareBrothers/example-design-system"
                }
            ]
        },
        "search": true
    }
}