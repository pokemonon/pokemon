{
    "name": "pokemon",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "ts": "ts-node -r tsconfig-paths/register",
        "clean": "lerna clean -y && rm -rf node_modules",
        "build": "lerna run build",
        "pub": "lerna publish",
        "new": "ts-node scripts/create.ts",
        "doc": "lerna exec npm run doc",
        "bump": "HUSKY=0 changeset && changeset version",
        "release": "npm run build && changeset publish"
    },
    "devDependencies": {
        "@types/ejs": "^3.0.6",
        "@types/fs-extra": "^9.0.9",
        "@typescript-eslint/eslint-plugin": "^4.11.1",
        "@typescript-eslint/parser": "^4.11.1",
        "eslint": "^7.17.0",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "tsup": "^4.8.21",
        "typescript": "^4.3.2",
        "commitizen": "^4.2.4",
        "cz-conventional-changelog": "^3.3.0",
        "husky": "^6.0.0",
        "standard-version": "^9.3.0",
        "@changesets/cli": "^2.23.0"
    },
    "dependencies": {
        "ejs": "^3.1.6",
        "fs-extra": "^9.1.0",
        "globby": "^11.0.3"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}