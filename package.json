{
  "name": "pokemon",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r --paralle run build",
    "eachdocs": "pnpm run -r docs",
    "docs:dev": "npm run eachdocs && vitepress",
    "docs:build": "pnpm run eachdocs && vitepress build",
    "bump": "HUSKY=0 changeset && HUSKY=0 changeset version && pnpm install",
    "release": "npm run build && changeset publish",
    "lint": "eslint"
  },
  "dependencies": {
    "ejs": "^3.1.6",
    "fs-extra": "^9.1.0",
    "globby": "^11.0.3",
    "tsx": "^3.10.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.23.0",
    "@packbag/cli": "0.0.1-alpha.3",
    "@packbag/cli-rollup": "0.0.1-alpha.3",
    "@packbag/cli-rollup-plugin-common": "0.0.1-alpha.3",
    "@pokemonon/eslint-config-formatter": "^0.1.0-beta.12",
    "@types/ejs": "^3.0.6",
    "@types/fs-extra": "^9.0.9",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.0.0",
    "husky": "^6.0.0",
    "standard-version": "^9.3.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tsup": "^4.8.21",
    "typescript": "~4.7.4",
    "vitepress": "1.0.0-alpha.20",
    "vue": "^3.2.41"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
